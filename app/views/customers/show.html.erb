<div class="row">
  <div class="col-lg-12">
    <h1>顧客詳細</h1>
    <dl class="">
      <dt>お名前</dt>
      <dd style="margin: 0 0 10 20"><%= @customer.family_name %> <%= @customer.given_name %></dd>
      <dt>電子メール</dt>
      <dd style="margin: 0 0 10 20"><%= @customer.email %></dd>
    </dl>
    <%= link_to '編集', edit_customer_path(@customer), class: "btn btn-default" %>
      <!-- 編集ファイルを指定するためにedit_customer_path(@customer) -->
    <%= link_to '戻る', customers_path, class: "btn btn-default" %>
  </div>
</div>
